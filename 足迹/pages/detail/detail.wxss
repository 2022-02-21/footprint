/* pages/detail/detail.wxss */
/* nav */
page{
    display: flex;
    flex-direction: column;
    height: 100%;
}
.d-nav{
    display: flex;
    background-color: ivory;
    padding: 10rpx;
}
.d-nav-title{
    flex: 7;
    font-size: 70rpx;
    font-weight: bolder;
    text-align: center;
    margin-top: 30rpx;
    margin-bottom: 20rpx;
}
.d-nav-so{
    display: flex;
    flex:2;
    text-align: center;
  
}
.d-nav-star{
    flex: 1;
}
.d-nav-star image{
    margin-top: 70rpx;
    width: 55rpx;
    height: 55rpx;
}
.d-nav-ok{
    flex:1;
}
.d-nav-ok image{
    margin-top: 70rpx;
    width: 55rpx;
    height: 55rpx;
}
/* tab */
.tab{
    display: flex; 
    margin-top: 20rpx;
    padding-top: 10rpx;
    background-color: rgb(255, 255, 255);
    border: rgb(248, 247, 247) solid 1px;
}
.tab-item{
    flex: 1;
    font-size: 10pt;
    text-align: center;
    line-height: 72rpx;
    border-bottom: 6rpx solid #eee;
}

.tab-item.active{
    color: rgb(196, 157, 75);
    border-bottom: rgb(194, 192, 65) solid 1px;
}
.content{
    flex: 1;
}
.content > swiper{
    height: 100%;
}
/* info */
.io-swiper{
    width: 100%;
}
.io-swiper swiper{
    margin: auto;
    margin-top: 20rpx;
    margin-bottom: 10rpx;
    width: 95%;
    height: 350rpx;
}
swiper-item image{
    width: 100%;
    height: 100%;
    border-radius: 15rpx;
}
.io-addr{
    background-color: rgb(221, 241, 219);
    border-top: whitesmoke solid 2px;
    border-bottom: whitesmoke solid 2px;
}
.io-addr image{
    margin: auto;
    width: 50rpx;
    height: 50rpx;
}

.io-summary{
    width: 660rpx;
    margin: auto;
    margin-top: 5rpx;
    padding: 20rpx;
    font-family: fantasy;
    font-weight: lighter;
    text-indent: 2em;
    background-color: rgb(255, 255, 255);
    border: whitesmoke solid 2px;
    border-radius: 15rpx;
}

.io-priceList{
    background-color: rgb(213, 250, 229);
}
.io-p-title{
    color: white;
    font-size: 40rpx;
    padding-left: 15rpx;
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    margin-top: 20rpx;
    background-color: skyblue;
    border-top: whitesmoke solid 2px;
    border-bottom: whitesmoke solid 2px;
}
.io-p-price{
    margin: 0;
    padding: 0;
}
.io-price text{
    padding: 0;
    font-weight: lighter;
    /* border: thistle solid 2px; */
}
.io-coupon{
    background-color: rgb(245, 240, 179);
}
.io-attention{
    background-color: rgb(238, 145, 145);
}
.io-opentime{
    padding: 10rpx;
    margin-top: 10rpx;
    border-top:whitesmoke solid 2px;
    border-bottom: whitesmoke solid 2px;
    background-color: palegreen;
}
.io-content-title{
    color: white;
    padding: 20rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    background-color: rgb(221, 241, 219);

}
.io-content{
    background-color: rgb(221, 241, 219);
    width: 680rpx;
    padding: 15rpx;
    margin: auto;
    margin-top: 18rpx;
    text-indent: 2em;
    border: whitesmoke solid 2px;
    border-radius: 10rpx;
}