<!--pages/register/register.wxml-->
<!--pages/login/login.wxml-->
<view class="v1">
 <form bindsubmit="register">
 <!-- v2父容器  子view使用绝对布局 -->
   <view class="v2">
     <view class="dltext">注册</view>
  
     <!-- 手机号 -->
     <view class="phoneCs">
       <image src="/images/m-手机号.png" class="ph"></image>
       <input placeholder="请输入手机号" type="number" name="phone"/>
     </view>
  
     <!-- 密码 -->
     <view class="passwordCs">
       <image src="/images/密码 (1).png" class="ps"></image>
       <input placeholder="请输入密码" type="safe-password" name="password"/>
       <image src="/images/眼睛_显示_o.png" class="eye"></image>
     </view>
  
     <!-- 密码 -->
     <view class="passwordCs2">
       <image src="/images/密码确认.png" class="ps"></image>
       <input placeholder="请输入密码" type="safe-password" name="password2"/>
       <image src="/images/眼睛_显示_o.png" class="eye"></image>
     </view>
  
     <!-- 登录按钮 -->
     <view class="denglu">
       <button class="btn-dl" type="primary" form-type="submit">注册</button>
     </view>
  
     <!-- 协议区  xieyi -->
     <view class="xieyi">
     <checkbox-group  bindchange="isAgree">
       <checkbox class="isXY"></checkbox>
      </checkbox-group>
       <view class="text-xy">同意小程序的《使用协议》</view>
     </view>
   </view>
  
 <!-- 提示框  使用以下方式登录 -->
   <view class="v3">
     <view class="line"></view>
     <view class="lText">开始你的旅行</view>
     <view class="line"></view>
   </view>
  </form>
